<section class="container mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <a href="/profile" class="mb-3 d-block"> &larr; Back To Profile</a>
      <h2 class="text-center mb-4">
        Edit Post
      </h2>
      <form class="mt-3 edit-post-form" data-post-id="{{post.id}}">
        <div class="form-group mb-4">
          <label for="post-title" class="form-label h4 font-weight-bold">Post Title</label>
          <input name="post-title" type="text" class="form-control" value="{{post.title}}" />
        </div>
        <div class="form-group mb-4">
          <label for="post-body" class="form-label h4 font-weight-bold">Post</label>
          <textarea name="post-body" rows="10" class="form-control">{{post.body}}</textarea>
        </div>
        <div class="d-flex justify-content-between">
          <button type="submit" class="btn btn-primary mr-2">Save Changes</button>
          <button type="button" class="btn btn-danger ml-2 delete-post-btn">Delete Post</button>
        </div>
      </form>
    </div>
  </div>
</section>

<script src="/js/editPost.js"></script>
<script src="js/deletePost.js"></script>
