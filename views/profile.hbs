   <main class="column">
                            <video class="background-video" src="background.mp4" autoplay muted loop playsinline></video>
                            <section class="section">
                                <div class="container">
                                    <section class="section">
                                        <div class="container">
                                            <div class="bio-container">
                                                <div class="bio-left">
                                                    <p>Location: {{user.location}}</p>
                                                    <p>Birthday: {{user.birthday}}</p>
                                                    <p>Zodiac Sign: {{user.zodiacSign}}</p>
                                                </div>
                                                <div class="username">
                                                    <figure class="profile-picture">
                                                        <img src="default.png" alt="Profile picture">
                                                    </figure>
                                                    <h2 style="margin-top: 15px;">{{user.username}}</h2>
                                                    <a href="edit-profile-link"><i class="fas fa-user-edit edit-icon"></i></a>
                                                </div>
                                                <div class="bio-right">
                                                    <p>Posts: {{user.postsCount}}</p>
                                                    <p>Joined: {{user.joinedDate}}</p>
                                                </div>
                                            </div>
                                            <div class="iconContainer">
                                                <a href="plus-link" class="icon-link"><i class="fas fa-plus"></i></a>
                                                <a href="image-link" class="icon-link"><i class="fas fa-image"></i></a>
                                                <a href="heart-link" class="icon-link"><i class="fas fa-heart"></i></a>
                                            </div>
                                            <div class="posts-container">
                                                {{!-- Display user posts or liked posts here --}}
                                                {{#each posts}}
                                                {{> post}}
                                                {{/each}}
                                            </div>
                                        </div>
                                    </section>
                                </div>
                            </section>
                        </main>
